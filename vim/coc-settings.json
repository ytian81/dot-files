{
    "cSpell.spellCheckDelayMs": 500,
    "clangd.arguments": [
        "--background-index",
        "--clang-tidy",
        "--compile-commands-dir=${workspaceFolder}/build/bin",
        // "--enable-config",
        "--malloc-trim",
        "--pretty",
        "--project-root=${workspaceFolder}",
        "--remote-index-address=0.0.0.0:9090",
    ],
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/14.0.3/clangd_14.0.3/bin/clangd",
    // "clangd.trace.file": "/tmp/clangd.log",
    // "clangd.trace.server": "verbose",
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "diagnostic.floatConfig": {
        "maxWidth": 100,
        "focusable": false,
    },
    "git.addGBlameToVirtualText": true,
    "git.conflict.enabled": false,
    "git.enableGutters": false,
    "git.splitWindowCommand": "below sp",
    "hover.floatConfig": {
        "maxWidth": 100,
        "focusable": false,
    },
    "lightbulb.enableSign": true,
    "lightbulb.enableVirtualText": false,
    "snippets.priority": 100,
    "suggest.floatConfig": {
        "maxWidth": 100,
        "focusable": false,
    },
    "suggest.labelMaxLength": 100,
}
